﻿@model WhiteAura.Models.Booking

@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>


<br />
<br />
<div class="container">
    <h2>Create New Booking</h2>

    @using (Html.BeginForm("CreateBooking", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()


        <div class="form-container">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.UserID, new { @class = "form-label" })
                @Html.DropDownListFor(model => model.UserID, (SelectList)ViewBag.UserID, "Select User", new { @class = "form-control", @id = "user-dropdown" })
                @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ServiceID, new { @class = "form-label" })
                @Html.DropDownListFor(model => model.ServiceID, (SelectList)ViewBag.ServiceID, "Select Service", new { @class = "form-control", @id = "service-dropdown" })
                @Html.ValidationMessageFor(model => model.ServiceID, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.BookingDate, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.BookingDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                @Html.ValidationMessageFor(model => model.BookingDate, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ReservedHours, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.ReservedHours, new { @class = "form-control", type = "time" })
                @Html.ValidationMessageFor(model => model.ReservedHours, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NumOfGuest, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.NumOfGuest, new { @class = "form-control", type = "number" })
                @Html.ValidationMessageFor(model => model.NumOfGuest, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Status, new { @class = "form-label" })
                @Html.DropDownListFor(model => model.Status,
                    new SelectList(new[] {
                        new { Value = "Pending", Text = "Pending" },
                        new { Value = "Confirmed", Text = "Confirmed" },
                    }, "Value", "Text"), "Select Status", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.IsPaid)</label>
                <div>
                    @Html.RadioButtonFor(model => model.IsPaid, true, new { id = "paid" })
                    <label for="paid">Paid</label>

                    @Html.RadioButtonFor(model => model.IsPaid, false, new { id = "notPaid" })
                    <label for="notPaid">Not Paid</label>
                </div>
                @Html.ValidationMessageFor(model => model.IsPaid, "", new { @class = "text-danger" })
            </div>









            <div class="form-actions">
                <input type="submit" value="Create Booking" class="btn btn-primary" />
            </div>
        </div>
    }

    <div class="back-link">
        @Html.ActionLink("Back to Bookings List", "Index", "Bookings", null, new { @class = "btn btn-secondary" })
    </div>
</div>

<style>
    body {
        font-family: 'Lato', sans-serif;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 1200px; /* Adjust container size as needed */
        margin: 0 auto;
        padding: 15px;
    }

    h2 {
        font-size: 26px;
        margin: 20px 0;
        text-align: center;
    }

    .form-container {
        background-color: #ffffff;
        box-shadow: 0px 0px 9px 0px rgba(0, 0, 0, 0.1);
        border-radius: 3px;
        padding: 35px; /* Spacious form padding */
        margin-bottom: 25px;
    }

    .form-group {
        margin-bottom: 20px; /* Increased spacing between fields */
    }

    .form-label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .form-control {
        width: 100%;
        padding: 12px; /* Increased padding */
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        font-size: 16px; /* Larger font for readability */
    }

    .btn {
        display: inline-block;
        padding: 12px 24px; /* Larger buttons */
        font-size: 16px;
        font-weight: bold;
        text-align: center;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-primary {
        background-color: #007bff;
        color: #ffffff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: #ffffff;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .back-link {
        text-align: center;
        margin-top: 20px;
    }

    .form-control {
        height: calc(1.5em + 1.75rem + 2px);
    }
</style>
<script>
    $(document).ready(function () {
        // Initialize Select2 for user dropdown
        $('#user-dropdown').select2({
            placeholder: "Select User",
            allowClear: true
        });

        // Initialize Select2 for service dropdown
        $('#service-dropdown').select2({
            placeholder: "Select Service",
            allowClear: true
        });
    });
</script>