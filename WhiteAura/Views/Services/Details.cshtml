<script>


    $(document).ready(function () {
        // Handle the view button to show overlay
        $('.btn-box .btn').click(function () {
            $(this).closest('.project').find('.overlay').show();
        });

        // Handle the close button to hide overlay
        $('.overlay .close').click(function () {
            $(this).closest('.overlay').hide();
        });
    });

</script>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

<!-- SweetAlert JS -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>



<script>
    function showSweetAlertAndRedirect(url) {
        // Show SweetAlert before redirecting
        Swal.fire({
            title: 'Redirecting...',
            text: 'You will be redirected to the login page.',
            icon: 'info',
            confirmButtonText: 'OK',
            width: '400px', // Set a smaller width of the alert
            padding: '1em', // Set padding
            customClass: {
                popup: 'swal-popup-small' // Add a custom class for additional styling
            }
        }).then((result) => {
            if (result.isConfirmed) {
                // Redirect to the specified URL
                window.location.href = url;
            }
        });
    }
</script>

<style>
    /* Custom styles for the SweetAlert */
    .swal-popup-small {
        font-size: 1.2em; /* Decrease font size */
    }
</style>